background no
update_interval 2

override_utf8_locale yes

double_buffer yes
no_buffers yes

text_buffer_size 2048
imlib_cache_size 0

# -- Window specifications -- #

own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 0
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below

border_inner_margin 0
border_outer_margin 0

alignment middle_left
gap_x 50
gap_y 0

# -- Graphics settings -- #
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes

# -- Text settings -- #
use_xft yes
xftfont Monospace:size=10

uppercase yes

default_color ffffff
color1 ddaa00

pad_percents 3
use_spacer left

TEXT
$color1${font Serif:bold:size=12}Info$font$color
$hr
Uptime: $uptime_short${tab 90}${time %a, %b %d, %k:%M}

$color1${font Serif:bold:size=12}Workload$font$color
$hr
CPU 1: ${cpu cpu1}% ${cpubar cpu1}
CPU 2: ${cpu cpu2}% ${cpubar cpu2}
CPU 3: ${cpu cpu3}% ${cpubar cpu3}
CPU 4: ${cpu cpu4}% ${cpubar cpu4}
RAM  : $memperc% ${membar}

${if_existing /sys/class/power_supply/BAT0/present 1}$color1${font Serif:bold:size=12}Battery$font$color
$hr
Usage: $battery_percent% $battery_bar$endif

$color1${font Serif:bold:size=12}Filesystems$font$color
$hr
/    : ${fs_used_perc /}% ${fs_bar 6 /}
/home: ${fs_used_perc /home}% ${fs_bar 6 /home}

$color1${font Serif:bold:size=12}Disk$font$color
$hr
Read : ${diskio_read sda}${tab 90}Write: ${diskio_write sda}

$color1${font Serif:bold:size=12}Networking$font$color
$hr
Up   : ${upspeed eth0}${tab 90}Down : ${downspeed eth0}

$color1${font Serif:bold:size=12}Weather$font$color
$hr
Today: ${weather http://xoap.weather.com/weather/local/ CHXX0116 cloud_cover}${tab 90}Temp :${weather http://xoap.weather.com/weather/local/ CHXX0116 temperature}Â°C
Humid: ${weather http://xoap.weather.com/weather/local/ CHXX0116 humidity}%${tab 90}Wind : ${weather http://xoap.weather.com/weather/local/ CHXX0116 wind_speed}km/h

